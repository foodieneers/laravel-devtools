{
    "name": "foodieneers/laravel-devtools",
    "description": "Laravel package for dev tools ",
    "keywords": [
        "Foodieneers",
        "laravel",
        "laravel-devtools"
    ],
    "homepage": "https://github.com/foodieneers/laravel-devtools",
    "license": "MIT",
    "type": "package",
    "authors": [
        {
            "name": "Azzarip",
            "email": "paride21azzari@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "driftingly/rector-laravel": "^2.1",
        "illuminate/contracts": "^11.0||^12.0",
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "peckphp/peck": "*",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-browser": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.2",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Foodieneers\\DevTools\\": "src/",
            "Foodieneers\\DevTools\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foodieneers\\DevTools\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "lint": [
            "rector",
            "pint --parallel"
        ],
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:lint": [
            "pint --parallel --test",
            "rector --dry-run"
        ],
        "test:unit": "pest --parallel --coverage --exactly=100.0",
        "pest": "pest --profile",
        "test:types": "phpstan",
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:types"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "class": "Foodieneers\\DevTools\\ComposerPlugin",
        "laravel": {
            "providers": [
                "Foodieneers\\DevTools\\DevToolsServiceProvider"
            ],
            "aliases": {
                "DevTools": "Foodieneers\\DevTools\\Facades\\DevTools"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
